function cToF(celsius) {
  // this is celsius to Fahrenheit
  var C = celsius;
  var CtoF = C * 9 / 5 + 32;
  var message = C +"\xB0C is " + CtoF + " \xB0F.";
    console.log(message);
}

function fToC(fahrenheit) {
  // this is Fahrenheit to Celsius
var F = fahrenheit;
  var FtoC = (F - 32) * 5 / 9;
  var message = F + "\xB0F is " + FtoC + "\xB0C.";
    console.log(message);
}

cToF(60);
fToC(45);
